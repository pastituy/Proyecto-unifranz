# ==================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==================================

# URL de conexión a PostgreSQL
# Formato: postgresql://USUARIO:PASSWORD@HOST:PUERTO/NOMBRE_BD
DATABASE_URL="postgresql://usuario:password@localhost:5432/onco"

# ==================================
# CONFIGURACIÓN DE SEGURIDAD
# ==================================

# Secret para JWT (DEBE SER UNA CADENA ALEATORIA DE 256+ BITS)
# Generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="REEMPLAZAR_CON_SECRET_ALEATORIO_MIN_32_CARACTERES"

# Secret para sesiones (DEBE SER UNA CADENA ALEATORIA)
SESSION_SECRET="REEMPLAZAR_CON_SECRET_ALEATORIO_MIN_32_CARACTERES"

# Entorno de ejecución (development, production, test)
NODE_ENV="development"

# Orígenes permitidos para CORS (separados por comas)
# Ejemplo: http://localhost:5173,https://mi-dominio.com
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# IPs whitelisted para rate limiting (opcional, separadas por comas)
# WHITELIST_IPS="192.168.1.100,10.0.0.5"

# ==================================
# CONFIGURACIÓN DE EMAIL
# ==================================

# Servicio de email (gmail, outlook, etc.)
EMAIL_SERVICE="gmail"

# Cuenta de email para envío
EMAIL_USER="tu-email@ejemplo.com"

# Contraseña de aplicación del email
# Para Gmail: https://support.google.com/accounts/answer/185833
EMAIL_PASSWORD="tu-password-de-aplicacion"

# Email desde el cual se envían notificaciones
EMAIL_FROM="noreply@oncofeliz.org"

# ==================================
# CONFIGURACIÓN DE REDES SOCIALES
# ==================================

# --- Facebook ---
FACEBOOK_PAGE_ID="tu-page-id"
FACEBOOK_ACCESS_TOKEN="tu-access-token"

# --- Twitter/X ---
TWITTER_API_KEY="tu-api-key"
TWITTER_API_SECRET="tu-api-secret"
TWITTER_BEARER_TOKEN="tu-bearer-token"
TWITTER_ACCESS_TOKEN="tu-access-token"
TWITTER_ACCESS_TOKEN_SECRET="tu-access-token-secret"

# --- TikTok ---
# (TikTok no tiene API pública aún, preparación manual)
TIKTOK_USERNAME="tu-username"

# ==================================
# CONFIGURACIÓN DE PAGOS
# ==================================

# Banco Nacional de Bolivia (BNB)
BNB_API_KEY="tu-api-key"
BNB_MERCHANT_ID="tu-merchant-id"
BNB_CALLBACK_URL="https://tu-dominio.com/api/bnb/callback"

# ==================================
# CONFIGURACIÓN DE SERVIDOR
# ==================================

# Puerto del servidor
PORT=3000

# Host del servidor
HOST="0.0.0.0"

# URL base del backend (para producción)
BACKEND_URL="http://localhost:3000"

# URL base del frontend (para producción)
FRONTEND_URL="http://localhost:5173"

# ==================================
# CONFIGURACIÓN DE ARCHIVOS
# ==================================

# Directorio de uploads
UPLOAD_DIR="./uploads"

# Tamaño máximo de archivo (en bytes)
# 5MB = 5242880 bytes
MAX_FILE_SIZE=5242880

# ==================================
# CONFIGURACIÓN DE LOGGING
# ==================================

# Nivel de log (error, warn, info, debug)
LOG_LEVEL="info"

# Directorio de logs
LOG_DIR="./logs"

# ==================================
# CONFIGURACIÓN DE 2FA
# ==================================

# Longitud del código 2FA
TWO_FACTOR_CODE_LENGTH=6

# Tiempo de expiración del código 2FA (en minutos)
TWO_FACTOR_EXPIRY_MINUTES=10

# ==================================
# CONFIGURACIÓN DE ENCRIPTACIÓN
# ==================================

# Clave de encriptación para datos sensibles (32 bytes hex)
# Generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="REEMPLAZAR_CON_CLAVE_ALEATORIA_32_BYTES_HEX"

# ==================================
# INSTRUCCIONES
# ==================================
#
# 1. Copiar este archivo como .env en el mismo directorio
# 2. NUNCA commitear el archivo .env a Git
# 3. Generar secrets aleatorios para JWT_SECRET y SESSION_SECRET
# 4. Configurar credenciales reales de servicios externos
# 5. En producción, usar variables de entorno del servidor (Railway, Heroku, etc.)
# 6. Regenerar todos los secrets si se comprometen
#
# IMPORTANTE:
# - Los valores entre comillas son ejemplos
# - Reemplazar TODOS los valores con datos reales
# - Mantener este archivo actualizado cuando se agreguen nuevas variables
